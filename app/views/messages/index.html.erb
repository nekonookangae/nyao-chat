<h1>Chat list</h1>

<body>
  <div class='col-xs-9'>
    <table class='table'>
      <thead class='table'>
        <tr>
          <th>Room title<th>
          <th>Chat<th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody class='table'>
        <div id="messages">
          <% @messages.each do |message| %>
            <tr>
              <td>
                <a href="/chat_rooms/<%= message.chat_room_id %>">
                  <%= @chat_rooms.find(message.chat_room_id).title %>
                </a>
              </td>
              <td></td>
              <td> <%= render message %> </td>
              <td></td>
              <td></td>
            </tr>
          <% end %>
        </div>
      </tbody>
      </table>
    </div>
</body>
