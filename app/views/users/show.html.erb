<div class='container'>
<h1>User info</h1>
<body>
  <div class='col-xs-9'>
    <table class='table'>
      <thead class='table'>
        <tr>
          <th>User name</th>
          <th>Introduction</th>
          <th>Action</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody class='table'>
        <tr>
          <td> <%= @user.name %> </td>
          <td> <%= @user.introduction %> </td>
          <td>
            <% if @user == current_user %>
              <a class="btn btn-success" href= <%= edit_user_path(@user) %>>Edit
              </a>
            <% end %>
          </td>
          <td></td>
        </tr>
      </tbody>
    </table>
  </div>
  <a class="btn btn-info" href= <%= users_path %>>Back</a>
</body>
</div>
